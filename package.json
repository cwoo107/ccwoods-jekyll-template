{
  "name": "ccwoodsconsulting",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently 'bundle exec jekyll serve --livereload' 'npm run js:watch' 'npm run css:watch'",
    "build": "JEKYLL_ENV=production bundle exec jekyll build && npm run js:build && npm run css:build",
    "js:watch": "esbuild assets/js/application.js --bundle --format=esm --outdir=_site/assets/js --watch",
    "js:build": "esbuild assets/js/application.js --bundle --format=esm --minify --outdir=_site/assets/js",
    "css:watch": "tailwindcss -i assets/css/main.css -o _site/assets/css/main.css --watch",
    "css:build": "tailwindcss -i assets/css/main.css -o _site/assets/css/main.css --minify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "decap-cms": "^3.6.2",
    "esbuild": "^0.20.2",
    "netlify-cms-app": "^2.15.72",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "description": ""
}
